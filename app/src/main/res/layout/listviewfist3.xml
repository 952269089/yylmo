<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <ImageView
            android:id="@+id/svrc2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/icon_true"
            android:scaleType="centerCrop"
            />
    <TextView
        android:id="@+id/dj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单价(元):"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="160dp"
        android:textColor="#272727"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/home_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100元"
        android:textSize="13sp"
        android:layout_toRightOf="@id/dj"

        android:layout_marginTop="10dp"

        />
        <TextView
            android:id="@+id/rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需求人数(人):"
            android:textSize="15sp"

            android:layout_marginLeft="160dp"
            android:layout_marginTop="30dp"
            android:textColor="#272727"
            />
        <TextView
            android:id="@+id/home_money2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="13sp"
            android:layout_toRightOf="@id/rs"


            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/sj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作时间:"
            android:textSize="15sp"

            android:layout_marginLeft="160dp"
            android:layout_marginTop="50dp"
            android:textColor="#272727"
            />

        <TextView
            android:id="@+id/cit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点:"
            android:textSize="15sp"

            android:layout_marginLeft="160dp"
            android:layout_marginTop="70dp"
            android:textColor="#272727"
            />

        <TextView
            android:id="@+id/shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="13sp"
            android:singleLine="true"
            android:layout_alignBaseline="@+id/sj"
            android:layout_alignBottom="@+id/sj"
            android:layout_toRightOf="@+id/sj"
            android:layout_toEndOf="@+id/sj"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/didian_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="13sp"
            android:singleLine="true"
            android:layout_alignBaseline="@+id/cit"
            android:layout_alignBottom="@+id/cit"
            android:layout_toRightOf="@+id/cit"
            android:layout_toEndOf="@+id/cit"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已认证,可放心接单"
            android:textSize="15sp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="100dp"
            android:textColor="#FF4081"
            />
</RelativeLayout>
</LinearLayout>
